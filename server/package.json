{
  "name": "server",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --noEmit",
    "start": "tsx src/server.ts",
    "deploy": "npm run deploy:cf",
    "deploy:cf": "node scripts/deploy-cloudflare.js",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:graph": "tsx src/services/ai/graph/basic-test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:test": "node scripts/test-db-connection.js",
    "db:validate": "tsx scripts/validate-db-config.ts",
    "db:populate": "tsx scripts/populate-embeddings.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@hono/node-server": "^1.12.0",
    "@langchain/anthropic": "^0.3.33",
    "@langchain/community": "^0.3.57",
    "@langchain/core": "^0.3.79",
    "@langchain/langgraph": "^0.2.74",
    "@langchain/openai": "^1.0.0",
    "@neondatabase/serverless": "^0.9.0",
    "@types/pg": "^8.15.5",
    "dotenv": "^16.0.0",
    "drizzle-orm": "^0.36.4",
    "firebase-admin": "^12.0.0",
    "fs-extra": "^11.2.0",
    "hono": "^4.0.5",
    "jose": "^5.2.3",
    "langchain": "^0.3.36",
    "pg": "^8.16.3",
    "pgvector": "^0.2.1",
    "postgres": "^3.4.7",
    "undici": "^7.18.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@eslint/js": "^9.25.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/ui": "^4.0.3",
    "c8": "^10.1.3",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.28.1",
    "eslint": "^9.25.0",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.3",
    "wrangler": "^4.16.0"
  }
}